<resources>
    <!-- Base application themes. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your themes here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="textSmall">
        <item name="android:textSize">8sp</item>
    </style>
    <style name="textMed">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="textLarge">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="textBlack">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="textGreen">
        <item name="android:textColor">#26CB26</item>
    </style>
    <style name="textBlue">
        <item name="android:textColor">#2E15D0</item>
    </style>
    <style name="backgroundDark">
        <item name="android:colorBackground">#433B3B</item>
    </style>
    <style name="backgroundLight">
        <item name="android:colorBackground">#F7EBEB</item>
    </style>
    <style name="backgroundContrast">
        <item name="android:colorBackground">#FF8C00
        </item>
    </style>

</resources>